
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Rental Form</h2>
<form id="form">
    <div class="form-group">
        <label>Customer</label>
        <div class="tt-container">
            <input id="customer" type="text" name="validCustomer" data-rule-validCustomer="true" class="form-control" required />
        </div>
       
    </div>   
    <div class="form-group">
        <label>Movies Renting</label>
        <div class="tt-container">
            <input id="movie" type="text" name="validMovie" class="form-control" data-rule-validMovie />
        </div>
        
    </div> 
    <div class="col-md-4">
        <ul id="movies" class="list-group"></ul>
    </div>
    <br />
    <button class="btn btn-primary sildeFormBtn">Submit</button>  
</form>
@section scripts{
    @Scripts.Render("~/bundles/jqueryval");  
<script src="~/Scripts/CustomScripts/NewRental.js"></script>
        }
