@model vidly.ViewModels.RoleList
@{
    ViewBag.Title = "AddRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>
        Email:&emsp; @Html.DisplayFor(modelItem => Model.Email)
    </li>
    <li>
        Name:&emsp; @Html.DisplayFor(modelItem => Model.Name)
    </li>
    <li>
        ZipCode:&emsp;  @Html.DisplayFor(modelItem => Model.ZipCode)
    </li>
</ul>
<ul>
    <p style="background-color:#192c3d;color:white;border:1px solid #243f57;width:70px;padding-left:10px">Roles</p>
    @if (!Model.AssignedRole.Any())
    {
        <li class="text-success">This User has no Role assigned yey</li>
    }
    else
    {
        foreach (var item in Model.AssignedRole)
        {
            <li>@Html.DisplayFor(modelItem => item)</li>
        }
    }
</ul>
@using (Html.BeginForm())
{ 
@Html.Label("Role")
@Html.DropDownList("role", new SelectList(Model.Roles))
@Html.HiddenFor(Model=>Model.Id)
<input type="submit" value="Save" />
}
