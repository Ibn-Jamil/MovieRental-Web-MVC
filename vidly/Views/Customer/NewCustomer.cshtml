@model vidly.ViewModels.ViewModelCustomer
@{
    ViewBag.Title = "NewCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>
@using (Html.BeginForm("CreateCustomer", "Customer"))
{
    <div class="form-group">
        <div class="form-group">
            @Html.LabelFor(x => x.customers.CustomersName)
            @Html.TextBoxFor(x => x.customers.CustomersName, new { @class = "input-group" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.customers.BirthDate)
            @Html.TextBoxFor(x => x.customers.BirthDate, new { @class = "input-group", onclick= "myFunction()" ,id= "datepicker", placeholder="mm/dd/yyyy" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.customers.MemberShipTypesId)
            @Html.DropDownListFor(x => x.customers.MemberShipTypesId, new SelectList(Model.membershiptype,"Id", "MemberShipCatagory"), new { @class = "input-group" })
        </div>

        <div class="checkbox">
            <label>
                @Html.CheckBoxFor(x => x.customers.IsSubscribedToNewsLetter) Subscribe To NewsLetters
            </label>
        </div>
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary">Create</button>

    </div>
}
@section scripts
    {
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="~/Scripts/jquery-ui.js"></script>
    <script>   
  function myFunction() {
  var x = document.getElementById("datepicker");
  x.setAttribute("type", "date");
  x.setAttribute("value", "2014-02-09");
 
}
</script>

}

